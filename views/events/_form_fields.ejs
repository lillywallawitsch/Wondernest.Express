<div class="form-group">
    <label for="title">Title</label>
    <input required value="<%= event.title %>" type="text" name="title" id="title" class="form-control">
</div>
<div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control"><%= event.description %></textarea>
</div>
<div class="form-group">
    <label for="location">Location</label>
    <textarea required name="location" id="location" class="form-control"><%= event.location %></textarea>
</div>
<div class="form-group">
    <label for="date">Date</label>
    <input required type="date" name="date" id="date" placeholder="YYYY-MM-DD" class="form-control" value="<%= event.date %>">
</div>
<div class="form-group">
    <label for="host">Host</label>
    <textarea name="host" id="host" class="form-control"><%= event.host %></textarea>
</div>
<button type="submit">Save</button>
